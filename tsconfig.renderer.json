{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "lodash-es",
      "vite/client",
      "fs-extra"
    ],
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/renderer/*"
      ]
    }
  },
  "include": [
    "**/typings/**/*.d.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.vue"
  ]
}